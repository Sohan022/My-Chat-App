<%- include("partials/header") -%>

<%- include("partials/flash-message") -%>

<div id="form-box">
    <div class="ui main text container segment">
        <div class="ui huge header">Login</div>
        <form class="ui form" action="/login" method="POST">
            <div class="field">
                <label>Username</label>
                <input id="input-field" type="text" name="username" placeholder="Username" autocomplete="off" required>
            </div>
            <div class="field">
                <label>Password</label>
                <input id="input-field" type="password" name="password" placeholder="Password" autocomplete="off" required>
            </div>
            <button class="ui violet basic button">Login</button>
        </form>
    </div>
</div>
<%- include("partials/footer") -%>